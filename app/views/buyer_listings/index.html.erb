<style>
  .listings_main {
    padding: 8px;
    max-width: 768px;
    margin: auto;
    /* background: #80808000; */
}

.header_title_main h1 {
    font-size: 25px;
    font-weight: 800;
}

.card_main {
    box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
}

.card_body {
    display: flex;
}

.card_left img.car_image {
    width: 100%;
}

.card_left {
    width: 38%;
}

.card_right_sub .title {
    font-size: 15px;
    font-weight: 600;
}

.card_right_sub {
    padding: 15px 5px;
}

.desc_sub {
    font-size: 12px;
    color: gray;
    font-weight: 500;
}

.price_main {
    border: 1px solid #ff4700;
    border-radius: 5px;
    width: fit-content;
    padding: 1px 10px;
    font-size: 12px;
    color: #ff4700;
}
</style>
<%= render "layouts/welcome"%>

<div class="listings_main">
  <div class="header_title_main">
    <h1>Your Listings</h1>
  </div>
  <div class="listings_sub">
    <% @buyer_listings.each do |buyer_listing| %>
      <div class="card_main">
        <div class="card_body">
          <div class="card_left">
            <img class="car_image" src="<%= asset_url("no_car_image.jpeg") %>">
          </div>
          <div class="card_right">
            <div class="card_right_sub">
              <div class="top">
                <div class="title">
                  <%= "#{buyer_listing.year} #{buyer_listing.make} #{buyer_listing.model}" %>
                </div>
                <div class="desc">
                  <div class="desc_sub">
                    Trim: <%= buyer_listing.trim %>
                    Mileage: <%= buyer_listing.mileage %>
                  </div>
                  <div class="desc_sub">
                    Departure: <%= buyer_listing.departure %>
                  </div>
                </div>
              </div>
              <div class="bottom">
                <div class="left">
                </div>
                <div class="right">
                  <div class="icons">
                    <div class="icon_sub">
                      <i class="fa fa-usd" aria-hidden="true"></i>
                    </div>
                    <div class="icon_sub">
                      <i class="fa fa-car" aria-hidden="true"></i>
                    </div>
                  </div>
                  <div class="price_main">
                    <%= buyer_listing.purchase_price %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>